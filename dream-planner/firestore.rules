rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Дозволяємо читати та записувати всі документи в колекції dreams
    // В продакшені краще додати авторизацію
    match /dreams/{document} {
      allow read, write: if true;
    }
    
    // За замовчуванням відмовляємо в доступі до всіх інших документів
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 