rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Публічне читання зображень продуктів (за потреби)
    match /products/{allPaths=**} {
      allow read: if true;
      // Запис/видалення дозволені тільки користувачам з custom claim admin=true
      allow write, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // За замовчуванням — заборонити всі інші операції
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
